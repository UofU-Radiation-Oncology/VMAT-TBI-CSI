<Window x:Class="VMATAutoPlanMT.helpers.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VMATAutoPlanMT.helpers"
        mc:Ignorable="d"
        Title="Window1" SizeToContent="WidthAndHeight">
    <Grid Background="Red">
        <StackPanel>
            <ScrollViewer Margin="10">
                <TextBox Height="300" Width="400">

                </TextBox>
            </ScrollViewer>
            <Grid>
                <Button Content="Confirm" FontWeight="Bold" IsTabStop="True" HorizontalAlignment="Left" Width="120" Margin="10,0,0,10"></Button>
                <Button Content="Cancel" HorizontalAlignment="Right" Width="120" Margin="0,0,10,10"></Button>
            </Grid>
            
        </StackPanel>
        
    </Grid>
</Window>
